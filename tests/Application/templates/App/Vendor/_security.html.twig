<div class="ui right stackable inverted menu">
    {% if is_granted('ROLE_VENDOR') %}
        <div class="item" {{ sylius_test_html_attribute('full-name') }}>{{ 'sylius.ui.hello'|trans }} {{ app.user.email }}!</div>
        <a href="{{ path('app_vendor_dashboard') }}" class="item">{{ 'sylius.ui.my_account'|trans }}</a>
        <a href="{{ path('app_vendor_logout') }}" class="item sylius-logout-button" {{ sylius_test_html_attribute('logout-button') }}>{{ 'sylius.ui.logout'|trans }}</a>
    {% else %}
        <a href="{{ path('app_vendor_login') }}" class="item">{{ 'sylius.ui.login'|trans }}</a>
        <a href="{{ path('app_vendor_register') }}" class="item">{{ 'sylius.ui.register'|trans }}</a>
    {% endif %}
</div>
