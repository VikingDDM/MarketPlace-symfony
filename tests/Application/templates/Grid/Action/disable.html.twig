{% if data.enabled %}
    {% set path = options.link.url|default(path(options.link.route|default(grid.requestConfiguration.getRouteName('disable')), options.link.parameters|default({'id': data.id}))) %}
    <form action="{{ path }}" method="post">
        <input type="hidden" name="_method" value="PATCH">
        <button class="ui red labeled icon button" type="submit" data-requires-confirmation {{ sylius_test_html_attribute('delete-button') }}>
            <i class="icon x"></i> {{ action.label|trans }}
        </button>
        <input type="hidden" name="_csrf_token" value="{{ csrf_token(data.id) }}" />
    </form>
{% endif %}
