<?xml version="1.0" encoding="UTF-8" ?>
<doctrine-mapping xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
        http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="BitBag\SyliusMultiVendorMarketplacePlugin\Entity\VendorAddressUpdate" table="bitbag_vendor_address_update">
        <id name="id" type="integer">
            <generator strategy="AUTO" />
        </id>
        <field name="city" type="string"  />
        <field name="street" type="text" />
        <field name="postalCode" column="postal_code" type="text" />

        <many-to-one field="country" target-entity="Sylius\Component\Addressing\Model\Country">
            <join-column name="country_id" referenced-column-name="id" on-delete="CASCADE"/>
        </many-to-one>
    </entity>
</doctrine-mapping>
