<?xml version="1.0" encoding="UTF-8" ?>
<doctrine-mapping xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
        http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="BitBag\SyliusMultiVendorMarketplacePlugin\Entity\Vendor" table="bitbag_vendor">
        <id name="id" type="integer">
            <generator strategy="AUTO" />
        </id>
        <field name="companyName" column="company_name" type="string" />
        <field name="taxIdentifier" column="tax_identifier" type="string" />
        <field name="phoneNumber" column="phone_number" type="string" />
        <field name="status" column="status" type="string" />
        <field name="blocked" column="blocked" type="string" />
        <field name="isEdited" column="is_edited" type="boolean" />

        <one-to-one field="vendorAddress" target-entity="BitBag\SyliusMultiVendorMarketplacePlugin\Entity\VendorAddress" >
            <cascade>
                <cascade-persist/>
            </cascade>
        </one-to-one>

        <one-to-one field="customer" target-entity="BitBag\SyliusMultiVendorMarketplacePlugin\Entity\Customer" inversed-by="vendor">
            <join-column name="customer_id" referenced-column-name="id" />
        </one-to-one>

    </entity>
</doctrine-mapping>
