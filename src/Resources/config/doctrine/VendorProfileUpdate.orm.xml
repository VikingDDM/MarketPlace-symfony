<?xml version="1.0" encoding="UTF-8" ?>
<doctrine-mapping xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
        http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <mapped-superclass name="BitBag\SyliusMultiVendorMarketplacePlugin\Entity\VendorProfileUpdate" 
            table="bitbag_vendor_profile_update">
        <id name="id" type="integer">
            <generator strategy="AUTO" />
        </id>
        <field name="companyName" column="company_name" type="text" />
        <field name="taxIdentifier" column="tax_identifier" type="text" />
        <field name="phoneNumber" column="phone_number" type="text" />
        <one-to-one field="vendorAddress" target-entity="BitBag\SyliusMultiVendorMarketplacePlugin\Entity\VendorAddressUpdate" >
            <cascade>
                <cascade-persist/>
            </cascade>
        </one-to-one>
        <one-to-one field="vendor" orphan-removal="false" target-entity="BitBag\SyliusMultiVendorMarketplacePlugin\Entity\Vendor" />
        <field name="token" column="token" type="text" />        
    </mapped-superclass>
</doctrine-mapping>
