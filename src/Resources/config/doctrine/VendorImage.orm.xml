<?xml version="1.0" encoding="UTF-8" ?>
<doctrine-mapping xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
        http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="BitBag\SyliusMultiVendorMarketplacePlugin\Entity\VendorImage" table="bitbag_vendor_image">
        <id name="id" type="integer">
            <generator strategy="AUTO" />
        </id>
        <field name="type" column="type" type="string" length="32"/>
        <field name="path" column="path" type="text" />
        <many-to-one field="vendor" target-entity="BitBag\SyliusMultiVendorMarketplacePlugin\Entity\Vendor">
            <join-column referenced-column-name="id" />
        </many-to-one>
    </entity>
</doctrine-mapping>
