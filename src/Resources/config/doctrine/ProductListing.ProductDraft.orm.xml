<?xml version="1.0" encoding="UTF-8"?>

<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                                      http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="BitBag\SyliusMultiVendorMarketplacePlugin\Entity\ProductListing\ProductDraft" table="bitbag_mvm_product_draft">
        <id name="id" column="id" type="integer">
            <generator strategy="AUTO" />
        </id>
        <many-to-one field="productListing" target-entity="BitBag\SyliusMultiVendorMarketplacePlugin\Entity\ProductListing\ProductListing" >
            <join-column name="product_listing_id" referenced-column-name="id" />
            <cascade>
                <cascade-persist />
            </cascade>
        </many-to-one>
        <one-to-many field="translations" target-entity="BitBag\SyliusMultiVendorMarketplacePlugin\Entity\ProductListing\ProductTranslation" mapped-by="code">
            <cascade>
                <cascade-persist/>
            </cascade>
        </one-to-many>
        <one-to-many field="productListingPrice" target-entity="BitBag\SyliusMultiVendorMarketplacePlugin\Entity\ProductListing\ProductListingPrice" mapped-by="productDraft">
            <cascade>
                <cascade-persist/>
            </cascade>
        </one-to-many>
        <field name="code" column="code" type="string" unique="false" nullable="false" />
        <field name="isVerified" column="is_verified" type="boolean" unique="false" nullable="false" />
        <field name="verifiedAt" column="verified_at" type="datetime" unique="false" nullable="true"/>
        <field name="createdAt" column="created_at" type="datetime" unique="false" nullable="false"/>
        <field name="status" column="status" type="string" unique="false" nullable="false" />
        <field name="versionNumber" column="version_number" type="integer" unique="false" nullable="false" />
    </entity>

</doctrine-mapping>
