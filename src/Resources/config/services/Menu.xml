<?xml version="1.0" encoding="UTF-8"?>

<container xmlns="http://symfony.com/schema/dic/services" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <service id="mvm.listener.admin.menu_builder_conversation" class="BitBag\SyliusMultiVendorMarketplacePlugin\Menu\AdminConversationMenuListener">
            <tag name="kernel.event_listener" event="sylius.menu.admin.main" method="addConversationMenuItems" />
        </service>

        <service id="mvm.listener.vendor.menu_builder_conversation" class="BitBag\SyliusMultiVendorMarketplacePlugin\Menu\VendorConversationMenuListener">
            <argument type="service" id="security.token_storage" />
            <tag name="kernel.event_listener" event="sylius.menu.shop.account" method="addConversationMenuItems" />
        </service>
    </services>
</container>
