<div id="details" class="four wide column">
    <h4 class="ui top attached large header">{{ 'bitbag_sylius_multi_vendor_marketplace_plugin.ui.details'|trans }}</h4>
    <div class="ui attached segment">
        <table class="ui very basic celled table">
            {% if productListings %}

            <tbody>
            <tr>
                <td class="five wide"><strong class="gray text">{{ 'bitbag_sylius_multi_vendor_marketplace_plugin.ui.name'|trans }}</strong></td>
                <td class="five wide"><strong class="gray text">{{ 'bitbag_sylius_multi_vendor_marketplace_plugin.ui.published_at'|trans }}</strong></td>
            </tr>
            {% for productListing in productListings %}
            <tr>
                <td>
                    <ul class="ui bulleted list">
                        {{ productListing.code }}
                    </ul>
                </td>
                <td>
                    <ul class="ui bulleted list">
                        {{ productListing.publishedAt | date }}
                    </ul>
                </td>
            </tr>
            {% endfor %}
            </tbody>
            {% else %}
            <tbody>
                <span class="five wide text-center"><strong class="gray text">{{ 'bitbag_sylius_multi_vendor_marketplace_plugin.ui.is_emptly'|trans }}</strong></span>

            </tbody>
            {% endif %}
        </table>
    </div>
</div>
