{% extends '@SyliusShop/layout.html.twig' %}

{% block content %}
        <div class="row">
            <div class="col-3">
                <div class="row">
                    Logo:
                    {% if vendor.image is defined and vendor.image is not null%}
                        <img src="{{ imagesDir ~ vendor.image.path }}" alt="image broken">
                    {% endif %}
                </div>
                <div class="row">
                    Vendor name:
                    {{ vendor.companyName }}
                </div>
                <div class="row">
                    Description:
                    {{ vendor.description}}
                </div>
            </div>
            <div class="col-9">
                Vendor's products:
            </div>
        </div>
{% endblock %}
